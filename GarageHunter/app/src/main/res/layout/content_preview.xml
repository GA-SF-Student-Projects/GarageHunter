<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nicolassaad.garagehunter.PreviewActivity"
    tools:showIn="@layout/activity_preview">

    <TextView
        android:id="@+id/preview_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="28sp"
        android:text="@string/title"
        android:textColor="@color/black_color"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/preview_desc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/description"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/preview_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="@string/address"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/preview_DOW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="18sp"
        android:text="@string/day_of_week"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|bottom">

            <Button
                android:id="@+id/preview_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/accent_color"
                android:clickable="true"
                android:layout_marginBottom="55dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/go_back"
                android:textAllCaps="false" />

            <!--<Button-->
            <!--android:id="@+id/post"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/accent_color"-->
            <!--android:clickable="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginBottom="55dp"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:text="@string/post"-->
            <!--android:textAllCaps="false" />-->

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
